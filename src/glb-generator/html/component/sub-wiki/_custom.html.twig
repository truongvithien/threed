                </li>
                <li>
                    <span class="tab__item tab__item--tho" data-wiki-nation="tho">Thổ</span>
                </li>
            </ul>
        </div>


        
    </div>

    <div class="wiki_list">
        {% if data.list|length > 0 %}
            <ul class="wiki_ul">
                {% for item in data.list %}

                    {% set img =  item.thumbnail != null ? item.thumbnail : 'http://placehold.it/600x350' %}
                    {% set urlDetail =  site ~ '/tin-tuc' %}
                    {% set link   = item.linkExternal != null ?  item.linkExternal : urlDetail ~ '/' ~  item.catCode ~ '/' ~ item.linkSeo ~ '.html' %}
                    {% set target = item.isNewTab ?  'target=_blank' : '' %}
                    {% set robotFlow = item.linkExternal != null ?  'rel=nofollow' : '' %}
                    {% set isHot = item.isHot ?  'isHot' : '' %}

                    <li>
                        <div class="wiki_item {{isHot}}"
                            data-wiki-type="type{{item.type}}"  
                            data-wiki-name="{{item.title}}"
                            data-wiki-nation="{{item.nation}}"
                            data-wiki-query="type{{item.type}} {{item.nation}} {{item.title}}">
                            <a href="{{ img }}" {{target}} {{robotFlow}} class="wiki_item__thumbnail" 
                            title="{{ item.title }}">
                                <img class="lazyload" data-src="{{ img }}" alt="{{ item.title }}">
                            </a>
                            <div class="wiki_item__name">
                                {{ item.title }}
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            {% include "../function/empty-data.html.twig" %}
