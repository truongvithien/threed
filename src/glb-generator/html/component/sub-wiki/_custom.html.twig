<div id="{{ componentId }}" class="wiki wiki--{{ componentId }} wiki_hero">

    <div class="wiki_searchname">
        <div class="search">
            <form class="search__form">
                <input class="wiki_search_draft" type="text" name="q" placeholder="Tìm kiếm anh hùng">
            </form>
        </div>
    </div>

    <input type="hidden" name="wiki_search" id="wiki_search" class="wiki_search" />
    
    <div class="wiki_tab">
        <div class="wiki_tab__group">
            <div class="wiki_tab__title">
                Phẩm chất
            </div>
            <ul class="tab wiki_type">
                <li class="">
                    <span class="tab__item tab__item--all active" data-wiki-type="">Tất cả</span>
                </li>
                <li>
